extends layout_light

include mixins/blog/blog_header.pug
include mixins/navbar_sticky.pug
include mixins/blog/blog_card.pug
include mixins/blog/blog_footer.pug

block content
  +blog_header
  +navbar_sticky_light("home")
  .container
    .row.mt-5
    .row.mt-3.mb-5
      .col-md-1.ml-3.mb-2
        i.fas.fa-exclamation-triangle.fa-4x
      .col-md-10.ml-3
        h2 #{errorText}
        p #{errorSubtext}
        if errorSubtext2
          p #{errorSubtext2}
        p.text-secondary  If you continue to have issues contact us via twitter (@adcrounduphunt) or email (ADCRoundUPHunt@gmail.com).
        if attendeeId
          p.text-muted Attendee ID: #{attendeeId}
    .row

  +blog_footer
